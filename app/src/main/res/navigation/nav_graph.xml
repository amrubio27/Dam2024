<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movies_fragment">


<!-- The start destination of the navigation graph -->
    <fragment
        android:id="@+id/movies_fragment"
        android:name="edu.iesam.dam2024.features.movies.presentation.MoviesFragment"
        tools:layout="@layout/fragment_movies">

        <!-- Action to navigate to the movie detail screen -->
        <action
            android:id="@+id/action_movies_fragment_to_movie_detail_fragment"
            app:destination="@id/movie_detail_fragment" />

    </fragment>

    <!-- The movie detail screen -->
    <fragment
        android:id="@+id/movie_detail_fragment"
        android:name="edu.iesam.dam2024.features.movies.presentation.MovieDetailFragment"
        tools:layout="@layout/fragment_movie_detail">

        <!-- Argument to pass the movie id to the movie detail screen -->
        <argument
            android:name="movieId"
            app:argType="string"
            app:nullable="false" />

    </fragment>

</navigation>