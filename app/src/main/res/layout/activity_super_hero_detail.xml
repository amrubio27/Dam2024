<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.superheroes.presentation.SuperHeroDetailActivity">

    <!-- Image -->
    <ImageView
        android:id="@+id/superhero_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <!-- ID -->
    <TextView
        android:id="@+id/superhero_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/hero_id_placeholder"
        android:text=""
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/superhero_image"
        app:layout_constraintStart_toStartOf="@+id/superhero_image" />

    <!-- Name -->
    <TextView
        android:id="@+id/superhero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/hero_placeholder"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/superhero_image" />

    <!-- Description -->
    <TextView
        android:id="@+id/superhero_slug"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:ellipsize="end"
        android:hint="@string/hero_placeholder"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/superhero_name" />


</androidx.constraintlayout.widget.ConstraintLayout>