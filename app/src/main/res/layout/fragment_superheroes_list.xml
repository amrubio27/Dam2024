<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/superheroList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.superheroes.presentation.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listSuperHeroes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_superhero" />

    <edu.iesam.dam2024.app.presentation.views.ErrorAppView
        android:id="@+id/error_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>